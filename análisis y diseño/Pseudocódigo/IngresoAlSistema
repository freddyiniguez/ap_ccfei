identificaUsuario(usuario, password, rol){
	noIntentos = 0;

	if ((verificaCampos(usuario, password, rol)==TRUE){
		// Se construye la consulta con los datos recibidos y verificados.
		if ((consulta(QUERY)){
			return 0;
			// Se muestra la página correspondiente al rol del usuario
		}
		else{
			noIntentos++;
			if(noIntentos>3){
				return 2;
				// Se muestra la página de inicio con un mensaje de advertencia("Has excedido el número de intentos de inicio de sesión") 
			}
			else{
				// Se muestra la página de inicio con un mensaje de advertencia("Usuario o contraseña incorrectos")
			}
		}
	}
	else{
		return 1;
		// Se regresa a la página inicial con un mensaje de error. 
	}
}